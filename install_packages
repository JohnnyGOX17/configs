    python-pydot \
    python-pydot-ng \
    python-sphinx \
    python3-venv \
    qemu \
    qemu-kvm \
    qemu-system-arm \
    ranger \
    remmina \
    remmina-plugin-rdp \
    remmina-plugin-secret \
    ripgrep \
    ruby \
    scrot \
    shellcheck \
    silversearcher-ag \
    spotify-client \
    stress \
    tcl \
    texlive-full \
    tree \
    unrar \
    urlview \
    virtualbox-5.2 \
    visualboyadvance \
    visualboyadvance-gtk \
    vlc \
    w3m \
    w3m-img \
    wakeonlan \
    weechat \
    wget \
    wine \
    xclip \
    zathura \
    zlib1g-dev

  sudo apt -y autoremove

  # snap installs
  snap install netron

  pythonExe="pip3"

elif [ "$pkgApp" = "yum" ]; then
  sudo yum -y groupinstall "Development Tools" \
    "Compatibility Libraries" \
    "Security Tools" \
    "System Administration Tools"

  sudo yum install -y \
    apr-devel \
    apr-util-cdevel \
    autoconf \
